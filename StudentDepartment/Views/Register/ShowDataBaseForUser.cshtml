@model  List<StudentDepartment.Models.CreateStuAndDep>

<div class=container>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>StuName</th>
				<th>DepName</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@for (int i=0; i<Model.Count(); i++)
			{
			<tr>
				<td>@Model[i].StuName</td>
				<td>@Model[i].DepName</td>
				<td>
					<a href="@Url.Action("Delete", new {id=Model[i].ID })"><i class="glyphicon glyphicon-trash"></i></a>
					<a href="@Url.Action("Edit", new {id=Model[i].ID })"><i class="glyphicon glyphicon-edit"></i></a>
				</td>
			</tr>
			}
		</tbody>
	</table>



</div>
